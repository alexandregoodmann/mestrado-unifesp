import math
import matplotlib.pyplot as plt
import os

# Define o tamanho da figura
plt.figure(figsize=(6, 6)) 

#acidiona os vetores
x0 = 0
y0 = 0
xn = 10
yn = 10

# adiciona um vetor
plt.quiver(x0, y0, xn, yn, angles='xy', scale_units='xy', scale=1)

# adiciona outro vetor a partir do primeiro
plt.quiver(xn, yn, 10, 10, angles='xy', scale_units='xy', scale=1)

plt.xlim([0, 50]) # Limites do eixo X
plt.ylim([0, 50]) # Limites do eixo Y
plt.xlabel("Eixo X")
plt.ylabel("Eixo Y")
plt.title("Posição do Robo")
plt.grid(True)
plt.axhline(0, color='black', linewidth=0.5) # Eixo X
plt.axvline(0, color='black', linewidth=0.5) # Eixo Y
plt.gca().set_aspect('equal', adjustable='box') # Garante que a escala seja igual para os eixos
plt.show()